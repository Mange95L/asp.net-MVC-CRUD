@model IEnumerable<MVCEvent.BasicEvent>

<p>
    @Html.ActionLink("Skapa ny händelse", "Create", new { }, new { @class = "btn btn-success" })
</p>

<input class="form-control" id="myInput" type="text" placeholder="Sök">
<div id="myDIV" class="mt-3">
    <table class="table table-striped table-sm table-hover">
        <tbody id="myTable">
            <tr>
                <th>
                    Titel
                </th>
                <th>
                    Beskrivning
                </th>
                <th>
                    Datum
                </th>
                <th>
                    Skapad av
                </th>
                <th>
                    Kategori
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.creator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category)
                    </td>
                    <td>
                        @Html.ActionLink("Detaljer", "Details", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                    <td>
                        @Html.ActionLink("Ändra", "Edit", new { id = item.id }, new { @class = "btn btn-info btn-sm" })
                    </td>                    
                    <td>
                        @Html.ActionLink("Ta bort", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
            </tbody>
</table>
    </div>
<script src="~/Scripts/Search.js"></script>
