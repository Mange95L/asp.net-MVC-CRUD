@model MVCEvent.BusinessConnections

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2" for="businessId">Verksamhet</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.businessId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.businessId, "", new { @class = "text-danger" })
                <small class="text-muted">Ange ett identifikationsnummer för verksamhet</small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="eventId">Händelse</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.eventId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.eventId, "", new { @class = "text-danger" })
                <small class="text-muted">Ange ett identifikationsnummer för händelsen</small>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spara ändringar" class="btn btn-success" />
                @Html.ActionLink("Avbryt", "Index")
            </div>
        </div>
    </div>
}